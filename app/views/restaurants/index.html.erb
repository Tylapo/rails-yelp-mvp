<div class="container">
  <h1>List of all restaurants</h1>
  <ul class="list-unstyled">
    <% @restaurants.each do |restaurant| %>
      <li class="flex-column">Restaurant: <%= link_to restaurant.name, restaurant_path(restaurant) %> |
      <span><%= link_to 'Edit', edit_restaurant_path(restaurant) %></span> |
      <span><%= link_to "Delete", restaurant_path(restaurant), method: :delete %></span></li>
    <% end %>
  </ul>
  <hr>
  <%= link_to 'Add a new restaurant', new_restaurant_path(@restaurant) %> |
</div>
